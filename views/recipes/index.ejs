<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Recipes</title>
  </head>
  <body>
    <%- include('../partials/_navbar') %>
    <h1>Welcome to My Recipes</h1>
    <% allRecipes.filter( (recipe) => { %>
        <% if (recipe.INSERT_CRITERIA_HERE === true) {%>
            <% listRecipes(recipe) }})%>

    <% function listRecipes(recipe) { %>
        <ul>
            <li><h5>Name: <a href="/recipes/<%= recipe._id %>"><%= recipe.name %></a></h5></li>
            <!-- <li><h5>other data: <%= recipe. %></h5></li> -->
        </ul>
    <% } %>
  </body>
</html>
